# Service settings
EMAIL_VALIDATOR_SERVICE_NAME=email-validator
EMAIL_VALIDATOR_VERSION=1.0.0
EMAIL_VALIDATOR_DEBUG=false

# API settings
EMAIL_VALIDATOR_API_WORKERS=4
EMAIL_VALIDATOR_API_HOST=0.0.0.0
EMAIL_VALIDATOR_API_PORT=8000
EMAIL_VALIDATOR_API_PREFIX=/api/v1

# DNS settings
EMAIL_VALIDATOR_DNS_TIMEOUT=5.0
EMAIL_VALIDATOR_DNS_CACHE_TTL=300

# SMTP settings
EMAIL_VALIDATOR_SMTP_TIMEOUT=10.0
EMAIL_VALIDATOR_SMTP_MAX_CONNECTIONS=10
EMAIL_VALIDATOR_SMTP_MAX_RETRIES=3
EMAIL_VALIDATOR_SMTP_RETRY_DELAY=1.0
EMAIL_VALIDATOR_VERIFY_FROM_EMAIL=verify@yourdomain.com

# Redis settings
EMAIL_VALIDATOR_REDIS_HOST=localhost
EMAIL_VALIDATOR_REDIS_PORT=6379
EMAIL_VALIDATOR_REDIS_DB=0
EMAIL_VALIDATOR_REDIS_PASSWORD=
EMAIL_VALIDATOR_REDIS_MAX_CONNECTIONS=10

# Cache settings
EMAIL_VALIDATOR_DEFAULT_CACHE_TTL=3600
EMAIL_VALIDATOR_EMAIL_VALIDATION_CACHE_TTL=86400

# Rate limiting
EMAIL_VALIDATOR_RATE_LIMIT_ENABLED=true
EMAIL_VALIDATOR_DEFAULT_RATE_LIMIT=100
EMAIL_VALIDATOR_DEFAULT_RATE_WINDOW=60

# Logging
EMAIL_VALIDATOR_LOG_LEVEL=INFO
EMAIL_VALIDATOR_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Metrics
EMAIL_VALIDATOR_METRICS_ENABLED=true
EMAIL_VALIDATOR_METRICS_PORT=9090